<div class="container my-5">
    <h1 class="text-center mb-4 text-primary">My Cart</h1>

    <!-- Cart Items -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Item 1 -->
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150" alt="Product Image" class="img-fluid rounded-start">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Product Name</h5>
                            <p class="card-text text-muted">Price: $100.00</p>
                            <div class="d-flex align-items-center">
                                <label for="quantity" class="me-2">Quantity:</label>
                                <div class="input-group w-25">
                                    <button class="btn btn-outline-secondary" type="button" id="decrease">-</button>
                                    <input type="text" id="quantity" class="form-control text-center" value="1">
                                    <button class="btn btn-outline-secondary" type="button" id="increase">+</button>
                                </div>
                            </div>
                            <button class="btn btn-danger mt-3">Remove</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="https://via.placeholder.com/150" alt="Product Image" class="img-fluid rounded-start">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">Another Product</h5>
                            <p class="card-text text-muted">Price: $50.00</p>
                            <div class="d-flex align-items-center">
                                <label for="quantity2" class="me-2">Quantity:</label>
                                <input type="number" id="quantity2" class="form-control w-25" value="2" min="1">
                            </div>
                            <button class="btn btn-danger mt-3">Remove</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title text-center">Order Summary</h4>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Subtotal</span>
                        <span>$200.00</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Shipping</span>
                        <span>$20.00</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong>$220.00</strong>
                    </div>
                    <button class="btn btn-primary w-100 mt-3">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>